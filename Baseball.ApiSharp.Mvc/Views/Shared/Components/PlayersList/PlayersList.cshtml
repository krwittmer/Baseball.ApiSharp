@model Baseball.ApiSharp.Mvc.Models.ViewModels.PlayerSearchResultsViewModel

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Hometown</th>
            <th>Last game date</th>
            <th>Career home runs</th>
            <th>Career wins</th>
        </tr>
    </thead>

    @foreach (var item in Model.Players)
    {
        <tr>
            <td>@item.FirstName @item.LastName</td>
            <td>@item.HomeTown</td>
            <td>@item.FinalGame</td>
            <td>@item.CareerHomeRuns</td>
            <td>@item.CareerWins</td>
        </tr>
    }
</table>